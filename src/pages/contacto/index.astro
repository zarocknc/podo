---
import Layout from '../../layouts/Layout.astro';
import img1 from '../../assets/contacto/contactanos01.png';
import equipo from '../../assets/subFooter/equipo02.png';
import cruzB from '../../assets/banner/cruzB.png';
import Consulta from '@components/Consulta.astro';
---

<Layout title="Pododinamic | Contacto"  >
	<main class="w-full my-8 flex justify-evenly">
        <div class="lg:w-[35%] hidden lg:block">
            <img src={img1.src} alt="">
        </div>
        <div class="flex flex-col items-center justify-center gap-4 lg:w-[35%] w-[80%]">
            <div class="text-center">
                <h6 class="uppercase text-[#8FC751] leading-3">¡estamos listos para atenderte!</h6>
                <h2 class="uppercase text-[#1579BD] lg:text-6xl text-2xl font-bold">contacta</h2>
                <h3 class="uppercase text-[#55BABB] leading-4 lg:text-4xl text-xl">con nosotros</h3>
            </div>
            <div class="w-[80%]">
                <form action="/contacto/formulario.php" method="post" class="text-[#000] text-center flex flex-col gap-2">
                    <input type="text" id="nombre" name="nombre" placeholder="Escribe tu nombre y apellido" class="p-2 border-2 rounded-xl text-center" required>

                    <input type="tel" id="telefono" name="telefono" placeholder="Ingresa tu número de contacto" class="p-2 border-2 rounded-xl text-center" required>

                    <input type="email" id="correo" name="correo" placeholder="Déjanos tu correo electrónico" class="p-2 border-2 rounded-xl text-center" required>
                    
                    <textarea id="mensaje" name="mensaje" placeholder="Ingresa tu consulta" class="p-2 border-2 rounded-xl resize-none text-center" rows="5" cols="20" required></textarea>
                    
                    <div class="flex justify-center items-center w-full">
                        <input type="submit" class="bg-[#00bbbc] text-[#fff] font-bold text-lg border-2 rounded-2xl lg:py-4 py-2 mb-4 lg:w-[50%] w-2/5" value="Enviar">
                    </div>
                </form>
            </div>
        </div>
	</main>
    
    <section>
        <div class="bg-[#0098c3] flex lg:justify-center items-center lg:p-4 px-2 py-4 lg:py-4 w-full relative">
            <div class="text-[#fff] flex flex-col items-center lg:w-[40%] lg:gap-4 gap-2 w-full h-full">
                <div class="flex flex-col text-center w-full  text-sm">
                    <h2 class="font-bold lg:text-3xl leading-6">Equipo Profesional</h2>
                    <h2 class="text-2xl leading-6">Especializado en Podología</h2>
                    
                </div>
                <p class="lg:text-center w-[70%] leading-6 lg:text-[17px] text-[10px]">PODODINAMIC, está conformado por un equipo de especialistas en Podología, Biomecánica de la marcha, Fisioterapia y técnicas ortopédicas de nivel europeo.</p>
            </div>
            <div class="w-[65%] lg:w-[25%]">
                <img src={equipo.src} alt="" class="w-full">
            </div>
            <img src={cruzB.src} alt="" class="lg:w-10 w-4 absolute lg:top-8 lg:left-72  left-6 top-4">
            <img src={cruzB.src} alt="" class="lg:w-16 w-8 absolute lg:bottom-8 lg:right-40 bottom-2 right-36">
        </div>
    </section>
    <Consulta />
</Layout>